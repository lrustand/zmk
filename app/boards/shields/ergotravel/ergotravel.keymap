#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define _____ &none

#define DEFAULT   0
#define LOWER     1
#define RAISE     2
#define ADJUST    3
#define BLUE      4
#define GAMING    5
#define NORWEGIAN 6


/ {
    behaviors {
        shins: shift_insert {
            compatible = "zmk,behavior-mod-morph";
            label = "SHIFT_INSERT";
            #binding-cells = <0>;
            bindings = <&kp RSHFT>, <&kp INSERT>;
            mods = <(MOD_LSFT)>;
        };

		game_on: gaming_on {
			compatible = "zmk,behavior-macro";
			label = "GAMING_ON";
			#binding-cells = <0>;
			bindings = <&out OUT_USB>, <&to GAMING>;
		};

		game_off: gaming_off {
			compatible = "zmk,behavior-macro";
			label = "GAMING_OFF";
			#binding-cells = <0>;
			bindings = <&out OUT_BLE>, <&tog GAMING>;
		};
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
// ╭───────────┬───────────┬───────────┬───────────┬───────────┬───────────╮                 ╭──────────╮╭───────────┬───────────┬───────────┬───────────┬───────────┬───────────╮
     &kp TAB     &kp  Q      &kp  W      &kp  E      &kp  R      &kp  T                        &kp BSPC    &kp  Y      &kp  U      &kp  I      &kp  O      &kp  P       _____
